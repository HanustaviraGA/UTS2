<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout"
    android:layout_height="match_parent"
    tools:context=".ThirdFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:background="#c1c1c1"
                android:layout_height="300dp"/>

            <TextView
                android:id="@+id/userDataNama"
                android:layout_width="412dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="113dp"
                android:text="Nama Disini"
                android:textAlignment="center"
                android:textColor="#5C6BC0"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/userDataUsia"
                android:layout_width="412dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="113dp"
                android:text="Usia Disini"
                android:textAlignment="center"
                android:textColor="#5C6BC0"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/userDataNama"
                app:layout_constraintTop_toBottomOf="@+id/userDataNama" />

            <TextView
                android:id="@+id/userDataAlamat"
                android:layout_width="412dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="113dp"
                android:text="Alamat Disini"
                android:textAlignment="center"
                android:textColor="#5C6BC0"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/userDataUsia"
                app:layout_constraintTop_toBottomOf="@+id/userDataUsia" />

            <TextView
                android:id="@+id/userDataEmail"
                android:layout_width="412dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="113dp"
                android:text="Email Disini"
                android:textAlignment="center"
                android:textColor="#5C6BC0"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/userDataAlamat"
                app:layout_constraintTop_toBottomOf="@+id/userDataAlamat" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>